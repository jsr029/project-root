{
  "version": 2,
  "builds": [
    {
      "src": "./frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "frontend"
      }
    },
    {
      "src": "./backend/server.js",
      "use": "@vercel/node",
      "config": {
        "distDir": "backend"
      }
   }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/backend/server.js"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/$1"
    }
  ]
}

